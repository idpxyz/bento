# ============ 环境配置 ============
ENV=development  # development, test, production

# ============ 邮件配置 (EmailAdapter) ============
# Gmail 示例
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password  # 使用应用专用密码
FROM_EMAIL=noreply@myshop.com
FROM_NAME=My Shop
EMAIL_USE_SSL=true
EMAIL_USE_TLS=false

# SendGrid 示例
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASSWORD=YOUR_SENDGRID_API_KEY
# EMAIL_USE_TLS=true

# 阿里云邮件推送示例
# SMTP_HOST=smtpdm.aliyun.com
# SMTP_PORT=465
# SMTP_USER=your-username@your-domain.com
# SMTP_PASSWORD=YOUR_SMTP_PASSWORD
# EMAIL_USE_SSL=true

# ============ 支付宝配置 (AlipayAdapter) ============
# 沙箱环境
ALIPAY_APP_ID=2021001234567890
ALIPAY_PRIVATE_KEY_PATH=config/keys/alipay/app_private_key.pem
ALIPAY_PUBLIC_KEY_PATH=config/keys/alipay/alipay_public_key.pem
ALIPAY_DEBUG=true  # true = 沙箱, false = 生产
ALIPAY_NOTIFY_URL=https://myshop.com/api/payment/alipay/notify
ALIPAY_RETURN_URL=https://myshop.com/payment/success

# 生产环境
# ALIPAY_APP_ID=2021009876543210
# ALIPAY_PRIVATE_KEY_PATH=config/keys/alipay/prod_app_private_key.pem
# ALIPAY_PUBLIC_KEY_PATH=config/keys/alipay/prod_alipay_public_key.pem
# ALIPAY_DEBUG=false

# ============ 阿里云短信配置 (SmsAdapter) ============
ALIYUN_ACCESS_KEY_ID=YOUR_ACCESS_KEY_ID
ALIYUN_ACCESS_KEY_SECRET=YOUR_ACCESS_KEY_SECRET
SMS_SIGN_NAME=My Shop
SMS_REGION=cn-hangzhou
SMS_TEMPLATE_VERIFY=SMS_123456789
SMS_TEMPLATE_ORDER_CREATED=SMS_987654321

# ============ Redis 配置 (RedisInventoryAdapter) ============
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
INVENTORY_RESERVATION_TTL=1800  # 预留过期时间（秒）

# ============ 数据库配置 ============
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/myshop

# ============ 其他配置 ============
DEBUG=true
LOG_LEVEL=INFO
