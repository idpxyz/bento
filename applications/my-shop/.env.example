# my-shop Environment Configuration

# Application
APP_NAME=my-shop
APP_ENV=development
DEBUG=true

# Database
DATABASE_URL=sqlite+aiosqlite:///./my_shop.db
# For PostgreSQL: DATABASE_URL=postgresql+asyncpg://user:password@localhost/my_shop

# API
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Logging
LOG_LEVEL=INFO

# Service Discovery
SERVICE_DISCOVERY_BACKEND=env  # Options: env, consul, kubernetes
SERVICE_DISCOVERY_TIMEOUT=5
SERVICE_DISCOVERY_RETRY=3
SERVICE_DISCOVERY_CACHE_TTL=300

# Consul Settings (if using consul backend)
# CONSUL_URL=http://localhost:8500
# CONSUL_DATACENTER=dc1

# Kubernetes Settings (if using kubernetes backend)
# KUBERNETES_NAMESPACE=default
# KUBERNETES_SERVICE_SUFFIX=svc.cluster.local

# Service URLs (for env backend)
# SERVICE_CATALOG_SERVICE_URL=http://catalog-service:8001
# SERVICE_ORDER_SERVICE_URL=http://order-service:8002
# SERVICE_PAYMENT_SERVICE_URL=http://payment-service:8003
